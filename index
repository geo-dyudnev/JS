function cd(date) {
	var dateChange ={};
    return dateChange = {
        dateObj : new Date(date),
        add: function (num, part) {
            /*try {*/
                switch (part) {
                    case 'years':
                       return this.dateObj.setFullYear(this.dateObj.getFullYear(this.dateObj) + num); break;
                    case 'months':
                       return this.dateObj.setMonth(this.dateObj.getMonth(this.dateObj) + num); break;
                    case 'days':
                       return this.dateObj.setDate(this.dateObj.getDate(this.dateObj) + num); break;
                    case 'hours':
                        return this.dateObj.setHours(this.dateObj.getHours(this.dateObj) + num); break;
                    case 'minutes':
                        return this.dateObj.setMinutes(this.dateObj.getMinutes(this.dateObj) + num);
                }
            /*} catch (e) {
                return e.name;
            }*/
        },
        subtract: function (num, part) {
            /*try {*/
                switch (part) {
                    case 'years':
                        return this.dateObj.setFullYear(this.dateObj.getFullYear(this.dateObj) - num); break;
                    case 'months':
                        return this.dateObj.setMonth(this.dateObj.getMonth(this.dateObj) - num); break;
                    case 'days':
                        return this.dateObj.setDate(this.dateObj.getDate(this.dateObj) - num); break;
                    case 'hours':
                        return this.dateObj.setHours(this.dateObj.getHours(this.dateObj) - num); break;
                    case 'minutes':
                        return this.dateObj.setMinutes(this.dateObj.getMinutes(this.dateObj) - num);
                }
                /*} catch (e) {
                return e.name;
            }*/
        }
    }
}; var time = cd('2017-05-16 13:45')
    .add(24, 'hours')
    .subtract(1, 'months')
    .add(3, 'days')
    .add(15, 'minutes');
